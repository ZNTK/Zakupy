<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewIdOnCurrent"
        android:text="idproduku"
        android:layout_alignBottom="@+id/textViewJednostkanaliscie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIlosc"
        android:onClick="EdtxIlosc_OnClick"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewJednostkanaliscie"
        android:layout_toStartOf="@+id/textViewJednostkanaliscie" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiobutonczykupine"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewJednostkanaliscie"
        android:layout_alignBottom="@+id/radiobutonczykupine"
        android:layout_toLeftOf="@+id/radiobutonczykupine"
        android:layout_toStartOf="@+id/radiobutonczykupine" />

</RelativeLayout>