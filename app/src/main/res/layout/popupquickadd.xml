<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#8ea3e8">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/editTextNazwa"
        android:layout_below="@+id/textViewNazwa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textAlignment="center"
        android:autoText="false"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Nazwa"
        android:id="@+id/textViewNazwa"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ilość"
        android:id="@+id/textViewIlosc"
        android:layout_below="@+id/editTextNazwa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Jedn."
        android:id="@+id/textViewJednostka"
        android:layout_below="@+id/editTextNazwa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:layout_gravity="right"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/editTextIlosc"
        android:layout_below="@+id/textViewIlosc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:background="#ffffff"
        android:numeric="integer|signed|decimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/editTextJednostka"
        android:layout_below="@+id/textViewJednostka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Dodaj"
        android:id="@+id/btnDodajDoListyZakupow"
        android:layout_below="@+id/editTextIlosc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextJednostka"
        android:layout_alignEnd="@+id/editTextJednostka"
        android:onClick="btnDodajDoListyZakupow_onClick"
        />
</RelativeLayout>